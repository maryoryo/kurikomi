
<div class="container my-5 col-sm-6 col-10">
  
  <div class="row justify-content-center">
    
    <div class="card border-dark py-4 px-5">
    <h2 class="font-name">ジャンル名編集フォーム</h2>
      <div>
        <%= render 'layouts/errors', obj: @genre %>
        <%= form_with model: @genre, url: admin_genre_path(@genre), method: :patch, local: true do |f| %>
        
        <div class="form-field mt-3">
          <%= f.label :ジャンル名 %><br/>
          <%= f.text_field :name, autofocus: true, class:"form-control-file" %>
        </div>
        
        <div class="form-field mt-3">
          <%= f.submit "編集する", class:"btn btn-success" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>