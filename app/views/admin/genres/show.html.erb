<div class="container col-sm-8 col-10">
  <div class="row my-5">
    <h2 class="font-name">ジャンル名：<%= @genre.name %></h2>
    <div class="ml-auto mt-5">
      <%= link_to "ジャンル名編集", edit_admin_genre_path(@genre), class: "btn btn-secondary" %>
      <%= link_to "ジャンル削除", admin_genre_path(@genre), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
    </div>
  </div>
  <div class="row">
    <table class="table table-hover">
      <thead class="thead-dark">
        <tr>
          <th>コミュニティ画像</th>
          <th>コミュニティ名</th>
          <th>開設者</th>
          <th>参加人数</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @groups.each do |group| %>
        <tr>
          <td><%= attachment_image_tag group, :group_image, :fill, 60, 60, fallback: "no-image.png", size: "60x60", class:"rounded-circle" %></td>
          <td><%= group.name %></td>
          <td><%= group.owner.name %></td>
          <td><%= group.group_users.count %></td>
          <td><%= link_to "詳細", admin_group_path(group) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <div class="pagination">
    <%= paginate @groups %>
  </div>
  
</div>