<div class="search-form mt-2 col-sm-12 col-10">
  <%= form_with url: searchs_search_path, method: :get, local: true do |f| %>
    <%= f.text_field :content %>
    <%= f.select :model, options_for_select({ "会員"=> "user", "コミュニティ"=> "group", "ジャンル"=> "genre" }) %>
    <%= f.select :method, options_for_select({ "完全一致"=> "perfect", "前方一致"=> "forword", "後方一致"=> "backword", "部分一致"=> "partial"}) %>
    <%= f.submit "検索", class:"font-name btn btn-sm btn-info" %>
  <% end %>
</div>