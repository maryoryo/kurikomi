<% if group_post.favorited_by?(current_user) %>
  <%= link_to group_post_group_post_favorite_path(group_post, group_post_favorite_id), method: :delete, remote: true, class:"btn btn-outline-success" do %>
    ♥<%= group_post.group_post_favorites.count %> いいね
  <% end %>
<% else %>
  <%= link_to group_post_group_post_favorites_path(group_post), method: :post, remote: true, class:"btn btn-outline-success" do %>
    ♡<%= group_post.group_post_favorites.count %> いいね
  <% end %>
<% end %>
