<div class="container my-5 col-sm-6 col-10">
  
  <div class="row justify-content-center">
    
    <div class="card border-dark py-4 px-5">
    <h2 class="font-name name">投稿編集フォーム</h2>
      <div>
        <%= render 'layouts/errors', obj: @group_post %>
        <%= form_with(model: [@group, @group_post], url: group_group_post_path, method: :patch, local: true) do |f| %>
        
        <div class="form-field mt-3">
          <%= f.label :タイトル %><br/>
          <%= f.text_field :title, autofocus: true, class:"form-control" %>
        </div>
        
        <div class="form-field mt-3">
          <%= f.label :投稿内容 %><br/>
          <%= f.text_area :content, size:"55x3", class:"form-control" %>
        </div>
        
        <div class="form-field mt-3">
          <%= f.submit "編集する", class:"btn btn-success" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>