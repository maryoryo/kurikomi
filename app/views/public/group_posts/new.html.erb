<div class="container my-5">

  <div class="row justify-content-center">

    <div class="card border-dark py-4 px-5 col-10">
    <h2 class="font-name name">投稿フォーム</h2>
      <div>
        <%= render 'layouts/errors', obj: @group_post %>
        <%= form_with(model: [@group, @group_post], url: group_group_posts_path, method: :post, local: true) do |f| %>

        <div class="form-field mt-3">
          <%= f.label :タイトル %><br/>
          <%= f.text_field :title, autofocus: true, class:"form-control" %>
        </div>

        <div class="form-field mt-3">
          <%= f.label :投稿内容 %><br/>
          <%= f.text_area :content, size:"55x3", class:"form-control" %>
        </div>

        <div class="form-field mt-3">
          <%= f.submit "投稿する", class:"btn btn-success" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>