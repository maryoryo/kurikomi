<div class="container">
  <div class="row">
    <%= attachment_image_tag @group, :group_image, :fill, 60, 60, fallback: "no-image.png", size: "60x60" %>
    <h2><%= @group.name %></h2>
  </div>
  <div>
    <h4>概要</h4>
    <div><%= @group.introduction %></div>
  </div>
  <div>
    <% if @group.owner_id == current_user.id %>
      <%= link_to "グループを編集する", edit_group_path(@group), class: "btn btn-sm btn-success" %>
      <%= link_to "グループを削除する", group_path(@group), class: "btn btn-sm btn-danger" %>
    <% elsif @group.users.include?(current_user) %>
      <%= link_to "グループから脱退", group_path(@group), method: :delete, class: "btn btn-sm btn-danger" %>
    <% else %>
      <%= link_to "グループに参加する", join_group_user_path(group_id: @group, user_id: @user), class: "btn btn-sm btn-success" %>
    <% end %>
  </div>
  
  
</div>