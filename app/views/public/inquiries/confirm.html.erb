<div class="container my-5 col-sm-6 col-10">
  
  <div class="row justify-content-center">
    
    <div class="card border-dark py-4 px-5">
    <h2 class="font-name name">お問い合わせ確認</h2>
      <div>
        <%= render 'layouts/errors', obj: @inquiry %>
        <%= form_with model: @inquiry, url: inquiries_create_path, local: true do |f| %>
        
        <table class="table">
          <tr>
            <th>名前</th>
          </tr>
          <tr>
            <td>
              <%= f.hidden_field :name %>
              <%= @inquiry.name %>
            </td>
          </tr>
          <tr>
            <th>メールアドレス</th>
          </tr>
          <tr>
            <td>
              <%= f.hidden_field :email %>
              <%= @inquiry.email %>
            </td>
          </tr>
          <tr>
            <th>件名</th>
          </tr>
          <tr>
            <td>
              <%= f.hidden_field :subject %>
              <%= @inquiry.subject %>
            </td>
          </tr>
          <tr>
            <th>お問い合わせ内容</th>
          </tr>
          <tr>
            <td>
              <%= f.hidden_field :message %>
              <%= simple_format(@inquiry.message) %>
            </td>
          </tr>
        </table>
        <div class="row justify-content-center actions mt-3">
          <%= f.submit "送信する", class:"font-name btn btn-success col-sm-5 col-8" %>
        </div>
        <div class="row justify-content-center actions mt-3">
          <%= link_to "戻る", inquiries_index_path, class:"font-name btn btn-primary col-sm-5 col-8" %>
        </div>
        
        <% end %>
      </div>  
    </div>
  </div>
</div>
