<div class="container my-5 col-sm-6 col-10">
  
  <div class="row justify-content-center">
    
    <div class="card border-dark py-4 px-5">
    <h2 class="font-name name">お問い合わせ確認画面</h2>
      <div>
        <%= render 'layouts/errors', obj: @user %>
        <%= form_with model: @user, url: user_path(@user), local: true do |f| %>
        
        <table class="table">
          <tr>
            <th>名前</th>
          </tr>
          <tr>
            <td>
              <%= f.hidden_field :name %>
              <%= @inquiry.name %>
            </td>
          </tr>
          <tr>
            <th>メールアドレス</th>
          </tr>
          <tr>
            <td>
              <%= f.hidden_field :email %>
              <%= @inquiry.email %>
            </td>
          </tr>
          <tr>
            <th>件名</th>
          </tr>
          <tr>
            <td>
              <%= f.hidden_field :subject %>
              <%= @inquiry.subject %>
            </td>
          </tr>
          <tr>
            <th>お問い合わせ内容</th>
          </tr>
          <tr>
            <td>
              <%= f.hidden_field :message %>
              <%= simple_format(@inquiry.message) %>
            </td>
          </tr>
        </table>
        <div class="actions mt-3">
          <%= f.submit "送信する", class:"font-name btn btn-success" %>
        </div>
        
        <% end %>
      </div>  
    </div>
  </div>
</div>
