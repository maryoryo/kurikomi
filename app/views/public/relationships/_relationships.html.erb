<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, remote:true, class: "btn btn-primary col-5" %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user.id), method: :post, remote: true, class: "btn btn-success col-5" %>
  <% end %>
<% end %>