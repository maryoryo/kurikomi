<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, remote:true, class:"font-name btn btn-primary col-sm-5 col-8" %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user.id), method: :post, remote: true, class:"font-name btn btn-success col-sm-5 col-8" %>
  <% end %>
<% end %>