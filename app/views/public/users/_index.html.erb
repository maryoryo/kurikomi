<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th>会員ID</th>
      <th>PF画像</th>
      <th>ニックネーム</th>
      <th>参加コミュニティ数</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no-image.png", size: "60x60", class:"rounded-circle" %></td>
      <td><%= user.name %></td>
      <td><%= user.groups.count %></td>
      <td><%= link_to "詳細", user_path(user) %></td>
    </tr>
    <% end %>
  </tbody>
</table>