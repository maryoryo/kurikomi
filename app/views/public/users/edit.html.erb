<div class="container my-5 col-sm-6 col-10">
  
  <div class="row justify-content-center">
    
    <div class="card border-dark py-4 px-5">
    <h2 class="font-name name">ユーザー情報編集画面</h2>
      <div>
        <%= render 'layouts/errors', obj: @user %>
        <%= form_with model: @user, url: user_path(@user), local: true do |f| %>
        
         <div class="field mt-3">
          <%= f.label :プロフィール画像 %><br/>
          <%= f.attachment_field :profile_image, class:"form-control-file " %>
        </div>
        
        <div class="field mt-3">
          <%= f.label :ニックネーム %><br/>
          <%= f.text_field :name, autofocus: true, class:"form-control" %>
        </div>
        
        <div class="field mt-3">
          <%= f.label :概要%><br/>
          <%= f.text_area :introduction, size:"55x3", class:"form-control" %>
        </div>
        
        <div class="actions mt-3">
          <%= f.submit "保存する", class:"font-name btn btn-success" %>
        </div>
       
        <% end %>
      </div>  
    </div>
  </div>
</div>
