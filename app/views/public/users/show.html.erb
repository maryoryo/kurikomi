<div class="container">

  <h2><%= @user.name %>さんのページ</h2>
  <div class="row">
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no-image.png", size: "60x60" %>
    <div><%= @user.name %></div>
  </div>
  <table class="tabke">
    <tbody>
      <tr>
        <td>概要</td>
        <td><%= @user.introduction %></td>
      </tr>
      <tr>
        <td>オススメ動画</td>
        <td></td>
      </tr>
      <tr>
        <td>参加コミュニティ</td>
        <td>
          <% @groups.each do |group| %>
            <%= group.name %>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
  
  <div>
    <% if current_user != @user %>
      <% if current_user.following?(@user) %>
        <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-primary" %>
      <% else %>
        <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-success" %>
      <% end %>
    <% end %>
  </div>
  
  <div>
    <%= link_to user_followings_path(@user) do %>
      フォロー数:<%= @user.followings.count %>
    <% end %>
    <%= link_to user_followers_path(@user) do %>
      フォロワー数:<%= @user.followers.count %>
    <% end %>
  </div>
  
  <div>
    <% if current_user != @user %>
      <%= link_to "チャットを始める", chat_path(@user) %>
    <% end %>
  </div>

  <div>
    <% if @user.id == current_user.id %>
      <%= link_to "プロフィール編集", edit_user_path(@user), class:"btn btn-success" %>
      <%= link_to "退会する",user_users_quit_path(@user), class:"btn btn-danger" %>
    <% end %>
  </div>

</div>

